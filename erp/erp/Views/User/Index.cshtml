@model System.Data.DataTable
@{
    ViewBag.Title = "User Masterlist";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.16/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>

<script>
    $(document).ready(function () {
        $('#DT').DataTable();
    });
</script>
<div class="title_left">
    <h3>@ViewBag.Title</h3>
</div>
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Data Entry for <small>@ViewBag.Title</small></h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="DT" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.Rows.Count; i++)
                        {
                            <tr>
                                <td>@Model.Rows[i]["username"]</td>
                                <td>@Model.Rows[i]["email"]</td>
                                <td>@Model.Rows[i]["phoneNumber"]</td>
                                <td><a href="@Url.Action("Edit","User",new { @id=Model.Rows[i][0] })">Edit</a></td>
                                <td><a href="@Url.Action("Delete","User",new { @id=Model.Rows[i][0] })">Delete</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="@Url.Action("Register","User")" class="btn btn-primary">Add Record <i class="fa fa-plus" aria-hidden="true"></i></a>
            </div>
        </div>
    </div>
   
</div>

